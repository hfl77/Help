<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/SignUpTheme"
    tools:context="com.example.lenovo.help.Sign_up">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/register_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:text="注册信息"
            android:textColor="@color/black"
            android:textSize="33sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/register_info"
            android:layout_alignStart="@+id/register_info"
            android:layout_below="@+id/register_info"
            android:layout_marginTop="19dp"
            android:text="请输入用户名、密码和手机号"
            android:textColor="@color/textColor"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tips"
            android:layout_alignStart="@+id/tips"
            android:layout_below="@+id/tips"
            android:text="建议您使用真实姓名，以便于提高安全性"
            android:textColor="@color/textColor"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/phoneNumber_Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:ems="10"
            android:hint="手机号"
            android:inputType="text"
            app:layout_widthPercent="70%"
            android:textColorHint="@color/hintColor" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tips"
            android:layout_below="@+id/tips"
            android:layout_marginTop="53dp"
            android:text="手机号"
            android:textColor="@color/textColor"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/phoneNumber_Edit"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@+id/tips"
            android:layout_toRightOf="@+id/tips"
            app:layout_widthPercent="30%"
            android:text="获取验证码" />
        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="60sp"
            android:layout_alignLeft="@+id/textView5"/>
        <EditText
            android:id="@+id/username_Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_alignLeft="@+id/username"
            android:ems="10"
            android:hint="建议使用真实姓名"
            android:inputType="text"
            android:textColorHint="@color/hintColor" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textSize="16sp"
            android:textColor="@color/textColor"
            android:layout_below="@+id/username_Edit"
            android:layout_marginTop="22sp"
            android:layout_alignLeft="@+id/username"/>
        <EditText
            android:id="@+id/password_Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="建议不使用纯数字"
            android:textColorHint="@color/hintColor"
            android:layout_below="@+id/username"
            android:layout_marginTop="83sp"
            android:layout_alignLeft="@+id/username"/>

        <Button
            android:id="@+id/sign_up_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="53dp"
            android:background="@color/myblue"
            android:text="注册" />

    </RelativeLayout>
</android.support.percent.PercentFrameLayout>
